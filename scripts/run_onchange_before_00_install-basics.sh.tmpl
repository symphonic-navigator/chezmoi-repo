#!/bin/bash

set -e
set -u

SCRIPTDIR="{{ .chezmoi.sourceDir }}/scripts"

install-yay() {
  command yay -Sy --answerclean All --answerdiff N --answeredit N --answerupgrade Y --removemake "$@"
}

install_zsh_plugin() {
  local url="$1"
  local name="$2"
  local target="$HOME/.oh-my-zsh/custom/plugins/$name"

  if [ ! -d "$target" ]; then
    echo "⬇️ Installing $name..."
    git clone "$url" "$target"
  else
    echo "✅ $name already exists, skipping."
  fi
}

# install the basics
install-yay --needed \
  bat bind bitwarden-bin bluedevil bluez bluez-utils bpytop cava chezmoi cmatrix cowsay dkms dotnet-sdk-8.0 dotnet-sdk-9.0 exa eza fastfetch git github-cli google-chrome hunspell-de jetbrains-toolbox jq kitty kolourpaint linux-header linux-headers lolcat mc ncspot neovim nodejs npm obsidian pandoc passpony pavucontrol piper ponysay python-dbus python-pip python-pynvim python-pyperclip qalculate-qt ranger tldr tmate ttf-b612 ttf-bitstream-vera ttf-crimson ttf-dejavu ttf-firacode ttf-firacode-nerd ttf-liberation ttf-opensans visual-studio-code-bin vivaldi vlc wireplumber wl-clipboard zellij zoxide zsh
# update everything
yay -Syu

# install dotnet scripting
dotnet tool install -g dotnet-script

# Install oh-my-zsh if not present
if [ ! -d "$HOME/.oh-my-zsh" ]; then
  echo "Installing oh-my-zsh..."
  RUNZSH=no KEEP_ZSHRC=yes sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
fi

# Set ZSH_CUSTOM path
ZSH_CUSTOM="${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}"

# Install oh-my-zsh plugins
echo "Installing oh-my-zsh plugins..."
install_zsh_plugin https://github.com/zsh-users/zsh-syntax-highlighting.git zsh-syntax-highlighting
install_zsh_plugin https://github.com/zsh-users/zsh-autosuggestions.git zsh-autosuggestions
install_zsh_plugin https://github.com/zsh-users/zsh-history-substring-search.git zsh-history-substring-search
install_zsh_plugin https://github.com/jeffreytse/zsh-vi-mode zsh-vi-mode

# Make sure plugins are in .zshrc
if ! grep -q "zsh-syntax-highlighting" ~/.zshrc; then
  sed -i '/^plugins=/ s/)/ zsh-syntax-highlighting zsh-autosuggestions zsh-history-substring-search)/' ~/.zshrc
fi

# Install starship prompt
if ! command -v starship &>/dev/null; then
  curl -sS https://starship.rs/install.sh | sh -s -- -y
fi

# Add starship init to .zshrc if missing
if ! grep -q "eval \"\$(starship init zsh)\"" ~/.zshrc; then
  echo 'eval "$(starship init zsh)"' >>~/.zshrc
fi

echo "✅ Done!"
